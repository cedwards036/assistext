<?xml version="1.0" encoding="UTF-8"?>

<?import dev.christopheredwards.assistext.NormalText?>
<?import dev.christopheredwards.assistext.StepCardList?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox alignment="TOP_CENTER" xmlns:fx="http://javafx.com/fxml"
      fx:controller="dev.christopheredwards.assistext.Controller">
    <HBox alignment="CENTER">
        <padding>
            <Insets topRightBottomLeft="30"/>
        </padding>
        <NormalText fx:id="pipelineTitle"/>
    </HBox>
    <HBox alignment="CENTER" spacing="20">
        <StepCardList fx:id="steps" minWidth="250.0" spacing="20"/>
        <VBox alignment="TOP_CENTER" spacing="20">
            <TextArea fx:id="inputText"/>
            <TextArea fx:id="outputText"/>
        </VBox>
    </HBox>
</VBox>
